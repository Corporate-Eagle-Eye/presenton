# ComposeAI Backend Integration
COMPOSEAI_BACKEND_URL=http://localhost:8000

# Authentication
# Set to 'false' to disable authentication (for testing only)
ENABLE_COMPOSEAI_AUTH=true

# API Documentation Access
# Set to 'true' to make /docs and /openapi.json publicly accessible
SHOW_API_DOCS=false

# Application Data Directory
# Directory for images, exports, fonts (can be on network share)
APP_DATA_DIRECTORY=../../app_data

# Database Directory  
# Directory for SQLite database files (must be on local filesystem, not network share)
DB_DIRECTORY=../../app_data
